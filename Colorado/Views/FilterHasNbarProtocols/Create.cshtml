@model Colorado.Models.FilterHasNbarProtocol

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@ViewBag.filterName</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @{
            int filter_id = ViewBag.filter_id;
        }
        @Html.HiddenFor(model => filter_id)

        <div class="form-group">
            @Html.LabelFor(model => model.nbar_protocol_id, "nbar_protocol_id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("nbar_protocol_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.nbar_protocol_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { id = ViewBag.filter_id })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
