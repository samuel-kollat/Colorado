@model IEnumerable<Colorado.Models.Filter>

@{
    ViewBag.Title = "Index";
}

<h2>Network Filters</h2>

<p>
    @Html.ActionLink("New Filter", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Application.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th>
            ACLs
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NbarProtocols)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.ActionLink(item.Application.name, "Details", "Applications", new { id = item.Application.id }, new {})
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.type)
        </td>
        <td>
            @Html.ActionLink("Show", "Index", "AccessLists", new { id = item.id }, new {})
        </td>
        <td>
            @foreach (var proto in item.NbarProtocols)
            {
                @Html.DisplayFor(modelItem => proto.NbarProtocol.protocol_name)
                <br/>
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {id = item.id}) |
            @Html.ActionLink("Details", "Details", new {id = item.id}) |
            @Html.ActionLink("Delete", "Delete", new {id = item.id})
        </td>
    </tr>
}

</table>
